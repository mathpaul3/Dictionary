<script>
  $(function () {
    $("#dark").submit((e) => {
      e.preventDefault();
      const isdark = $("#darkinput").val();
      $.ajax({
        url: "/search/changeColor",
        type: "PUT",
        data: { isdark },
      })
        .done(() => {
          location.reload();
        })
        .fail((request, status, error) => {
          alert(request.responseText);
        });
    });
  });
</script>

